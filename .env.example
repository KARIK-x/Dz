# Environment Variables Configuration
# IMPORTANT: Copy this file to .env and replace ALL placeholder values before running

# ===========================
# Server Configuration
# ===========================
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# ===========================
# Database
# ===========================
MONGO_URI=mongodb://localhost:27017/daraz_cashback

# ===========================
# Security Secrets
# CRITICAL: REPLACE THESE BEFORE PRODUCTION
# Generate strong random strings (minimum 32 characters)
# ===========================
JWT_SECRET=PLACEHOLDER_JWT_SECRET_REPLACE_WITH_STRONG_RANDOM_STRING
HMAC_SECRET=PLACEHOLDER_HMAC_SECRET_REPLACE_WITH_STRONG_RANDOM_STRING

# ===========================
# Affiliate Code
# CRITICAL: NEVER commit this to public repositories
# Get from Daraz Affiliate Program dashboard
# ===========================
AFFILIATE_CODE=PLACEHOLDER_YOUR_DARAZ_AFFILIATE_CODE

# ===========================
# Payment Integration (eSewa)
# Get from eSewa Merchant Portal
# ===========================
ESEWA_MERCHANT_ID=PLACEHOLDER_ESEWA_MERCHANT_ID
ESEWA_SECRET_KEY=PLACEHOLDER_ESEWA_SECRET_KEY

# ===========================
# Payment Integration (Khalti)
# Get from Khalti Merchant Portal
# ===========================
KHALTI_PUBLIC_KEY=PLACEHOLDER_KHALTI_PUBLIC_KEY
KHALTI_SECRET_KEY=PLACEHOLDER_KHALTI_SECRET_KEY

# ===========================
# Admin Credentials
# Change default admin password immediately
# ===========================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=PLACEHOLDER_CHANGE_THIS_STRONG_PASSWORD

# ===========================
# CORS Configuration
# Comma-separated list of allowed origins
# ===========================
ALLOWED_ORIGINS=chrome-extension://*,http://localhost:3000

# ===========================
# Optional: Monitoring & Analytics
# ===========================
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_key_here
